<p id="notice"><%= notice %></p>

<%= render :partial => @post %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h2>Comments</h2>
 <div id="comments">
         <%= render :partial => @post.comments %>
 </div>

 <%= form_for [@post, Comment.new] do |f| %>
        <p>
                <%= f.label :text, "New comment" %><br/>
                <%= f.text_area :text %>
        </p>
        <p><%= f.submit "Add comment" %></p>
<% end %>
